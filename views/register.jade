extends layout

block content
  form(name="obtainServerSecret", method="post", action="/register",_csrf=csrf)
        div.form-group.col-xs-3
          label.control-label Username    
          input(type="text", name="username",autocomplete="off",required).form-control
          input(type="hidden", name="_csrf",value=csrf)        
          input(type="submit", value="Confirm").btn.btn-primary.pull-right
